<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="eus.ehu.tta.upv_ehutour.vista.PlazaLaboaActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/titlePlazaLaboa"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:gravity="center"/>
    <LinearLayout
        android:id="@+id/backgroundPlazaLaboa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textoPlazaLaboa"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"/>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/pruebaPlazaLaboa"
            android:layout_gravity="center"
            android:visibility="gone"
            android:columnCount="2">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="35dp">

                <ImageView
                    android:id="@+id/backgroundLaboaBiblioteca"
                    android:layout_height="90dp"
                    android:layout_width="90dp"
                    android:layout_gravity="center"/>

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="150dp"
                    android:layout_gravity="center"
                    style="@android:style/Widget.Spinner"
                    android:layout_height="40dp"
                    android:entries="@array/plazaLaboaOpciones">

                </Spinner>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/backgroundLaboaEroski"
                    android:layout_height="90dp"
                    android:layout_width="90dp"
                    android:layout_gravity="center"/>

                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="150dp"
                    android:layout_gravity="center"
                    style="@android:style/Widget.Spinner"
                    android:layout_height="40dp"
                    android:entries="@array/plazaLaboaOpciones">

                </Spinner>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="35dp">

                <ImageView
                    android:id="@+id/backgroundLaboaFutbolin"
                    android:layout_height="90dp"
                    android:layout_width="90dp"
                    android:layout_gravity="center" />

                <Spinner
                    android:id="@+id/spinner3"
                    android:layout_width="150dp"
                    style="@android:style/Widget.Spinner"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:entries="@array/plazaLaboaOpciones">

                </Spinner>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/backgroundLaboaCafeteria"
                    android:layout_height="90dp"
                    android:layout_width="90dp"
                    android:layout_gravity="center"/>

                <Spinner
                    android:id="@+id/spinner4"
                    android:layout_width="150dp"
                    android:layout_gravity="center"
                    style="@android:style/Widget.Spinner"
                    android:layout_height="40dp"
                    android:entries="@array/plazaLaboaOpciones">

                </Spinner>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="35dp">

                <ImageView
                    android:id="@+id/backgroundLaboaFacCiencias"
                    android:layout_height="90dp"
                    android:layout_width="90dp"
                    android:layout_gravity="center"/>

                <Spinner
                    android:id="@+id/spinner5"
                    android:layout_width="150dp"
                    android:layout_gravity="center"
                    style="@android:style/Widget.Spinner"
                    android:layout_height="40dp"
                    android:entries="@array/plazaLaboaOpciones">

                </Spinner>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/backgroundLaboaFacComunicaciones"
                    android:layout_height="90dp"
                    android:layout_width="90dp"
                    android:layout_gravity="center"/>
                <Spinner
                    android:id="@+id/spinner6"
                    android:layout_width="150dp"
                    android:layout_gravity="center"
                    style="@android:style/Widget.Spinner"
                    android:layout_height="40dp"
                    android:entries="@array/plazaLaboaOpciones">

                </Spinner>

            </LinearLayout>


        </GridLayout>

        <Button
            android:id="@+id/botonCheckPlazaLaboa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:onClick="checkPrueba"
            android:text="@string/botonCheck"/>

        <Button
            android:id="@+id/botonPruebaPlazaLaboa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="@string/botonPrueba"
            android:onClick="prueba"/>

        <Button
            android:id="@+id/botonLlegarPlazaLaboa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="@string/botonMaps"
            android:onClick="llegarAqui"/>

    </LinearLayout>

</LinearLayout>
